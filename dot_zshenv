# Loaded by any new shell (terminal or not); we will use this
# *purely* for setting some non-PATH environment variables. 
export ZDOTDIR=${ZDOTDIR:-$HOME/.config/zsh}
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
export XDG_DATA_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
export XDG_STATE_HOME=${XDG_STATE_HOME:-$HOME/.local/state}
# No RUNTIME for Macs.

export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Git commit messages and the like don't need a full nvim
# setup but *do* want very fast loading; I may change my mind
# on this.
export EDITOR="vim"
export VISUAL="vim"
# -X leaves the results up after exiting; -R passes through
# standard ASCII escape keys (for color, e.g.); -i enables
# smartcase searching (case insensitive if there are no capitals
# in the search); -M enables an extended prompt.
export MANPAGER="less -X"
export PAGER="less -iMR"
